<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.message.admin.msg.dao.MsgCldDao">

	<sql id="commCols">
		id id,msg_id msgId,title title,content content,create_time createTime
	</sql>

	<insert id="save" parameterType="msgCld" flushCache="true">
		 insert into msg_cld(msg_id,title,content,create_time)
		 values(#{msgId},#{title},#{content},#{createTime})
	</insert>
	
	<delete id="delete" flushCache="true">
		delete from msg_cld
		<where>id=#{id}</where>
	</delete>
	
	<update id="update" parameterType="msgCld" flushCache="true">
		update msg_cld
		<set>
			msg_id=#{msgId},title=#{title},content=#{content},create_time=#{createTime}
		</set>
		<where>id=#{id}</where>
	</update>
	
	<select id="get" resultType="msgCld">
		select <include refid="commCols"/> from msg_cld
  		<where>id=#{id}</where>
	</select>
	
	<select id="findMsgCld" parameterType="msgCld" resultType="msgCld">
		select <include refid="commCols"/> from msg_cld
		<where>
			<if test="name!=null and name!=''">and name like concat(concat('%', #{name}), '%')</if>
			and isdel=0
		</where>
  		limit #{currentIndex}, #{size}
	</select>
	<select id="findMsgCldCount" parameterType="msgCld" resultType="int">
		select count(*) from msg_cld
		<where>
			<if test="name!=null and name!=''">and name like concat(concat('%', #{name}), '%')</if>
			and isdel=0
		</where>
	</select>
</mapper>